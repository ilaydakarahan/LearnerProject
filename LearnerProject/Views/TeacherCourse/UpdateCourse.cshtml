@model LearnerProject.Models.Entities.Course
@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
}
<br />
<h3>Kurs Güncelleme Sayfası</h3>

<form method="post">
    @Html.HiddenFor(x => x.CourseId)
    <label>Kurs Adı</label>
    @Html.TextBoxFor(x=>x.CourseName, new {@class="form-control"})
    <br />
    <label>Resim Url</label>
    @Html.TextBoxFor(x=>x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x=>x.Price, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.category, "Kategoriyi Seçin",
        new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-primary"><i class="fade fa-pen"></i>Güncelle</button>
</form>