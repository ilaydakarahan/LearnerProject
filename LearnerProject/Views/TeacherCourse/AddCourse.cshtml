@model LearnerProject.Models.Entities.Course
@{
    ViewBag.Title = "AddCourse";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
}

<h3>Kurs Ekleme Sayfası</h3>
<br />
<form method="post">
    <label>Kurs Adı</label>
    @Html.TextBoxFor(x => x.CourseName, new { @class = "form-control" })
    <br />
    <label>Resim Url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, "Kategoriyi Seçin",
    new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary"><i class="fade fa-save"></i> Kaydet</button>
    <!--httppost methodu bu sayfadaki bu üstteki butona basınca çalışır sadece.
        HTTPGET ise sadece bu tasarım sayfasını yükler -->
</form>